@model ProjetoDoacaoDeAlimentos.Models.Doacao

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Doacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoadorID" class="control-label"></label>
                <select asp-for="DoadorID" class="form-control" asp-items="ViewBag.Doador"></select>
                <span asp-validation-for="DoadorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistribuidorID" class="control-label"></label>
                <select asp-for="DistribuidorID" class ="form-control" asp-items="ViewBag.Distribuidor"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class ="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" style="margin:10px 0px 10px 0px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
