@model ProjetoDoacaoDeAlimentos.Models.Alimento

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Details</h1>

<div>
    <h4>Alimento</h4>
    <hr />
    <dl class="row">
        <div class = row>
            <div class = "col-sm-4">
                <img id="imgAlimento" style="width:100%;"/>
            </div>
            <div class = "col-sm-8">
                <dt class = "col-sm-12">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-12">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-12">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class = "col-sm-12">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Validade)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Validade)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Observacoes)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Observacoes)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DoacaoID)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DoacaoID)
                </dd>
            </div>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    buscaAlimento('@Model.Nome')
</script>